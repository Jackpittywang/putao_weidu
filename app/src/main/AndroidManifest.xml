<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.putao.wd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 分属app_id -->
        <meta-data
            android:name="app_id"
            android:value="1109"/>
        <!-- 主页 -->
            android:value="1109" />
        <!-- 闪屏 -->
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--主页-->
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- 登录 -->
        <activity
            android:name=".user.LoginActivity"
            android:screenOrientation="portrait"/>
        <!--注册-->
        <activity
            android:name=".user.RegisterActivity"
            android:screenOrientation="portrait"/>
        <!--用户服务协议-->
        <activity
            android:name=".user.ProtocolActivity"
            android:screenOrientation="portrait"/>
        <!--完善用户信息-->
        <activity
            android:name=".user.CompleteActivity"
            android:screenOrientation="portrait"/>
        <!--忘记密码-->
        <activity
            android:name=".user.ForgetPasswordActivity"
            android:screenOrientation="portrait"/>
        <!--活动详情-->
        <activity
            android:name=".start.action.ActionsDetailActivity"
            android:screenOrientation="portrait"/>
        <!--重置密码-->
        <activity
            android:name=".user.ResetPasswordAcitivity"
            android:screenOrientation="portrait"/>
        <!-- 收货地址列表 -->
        <activity
            android:name=".me.address.AddressListActivity"
            android:screenOrientation="portrait"/>
        <!-- 地区选择 -->
        <activity
            android:name=".me.address.CitySelectActivity"
            android:screenOrientation="portrait"/>
        <!-- 收货地址编辑 -->
        <activity
            android:name=".me.address.AddressEditActivity"
            android:screenOrientation="portrait"/>
        <!-- 商品详情 -->
        <activity
            android:name=".store.product.ProductDetailActivity"
            android:screenOrientation="portrait"/>
        <!-- 订单列表 -->
        <activity
            android:name=".me.order.OrderListActivity"
            android:screenOrientation="portrait"/>
        <!-- 订单详情页 -->
        <activity
            android:name=".me.order.OrderDetailActivity"
            android:screenOrientation="portrait"/>
        <!-- 订单物流详情页 -->
        <activity
            android:name=".me.order.OrderShipmentDetailActivity"
            android:screenOrientation="portrait"/>
        <!-- 关于我们 -->
        <activity
            android:name=".me.address.AboutUsActivity"
            android:screenOrientation="portrait"/>
        <!-- 设置 -->
        <activity
            android:name=".me.setting.SettingActivity"
            android:screenOrientation="portrait"/>
        <!-- 消息中心 -->
        <activity
            android:name=".me.message.MessageCenterActivity"
            android:screenOrientation="portrait"/>
        <!-- 关注成功 -->
        <activity
            android:name=".explore.AttentionSuccessActivity"
            android:screenOrientation="portrait"/>
        <!-- 购物车 -->
        <activity
            android:name=".store.shopping.ShoppingCarActivity"
            android:screenOrientation="portrait"/>
        <!-- 新闻详情 -->
        <activity
            android:name=".start.news.NewsDetailActivity"
            android:screenOrientation="portrait"/>
        <!-- 我要参加 -->
        <activity
            android:name=".start.apply.ApplyActivity"
            android:screenOrientation="portrait"/>
        <!-- 评论 -->
        <activity
            android:name=".start.comment.CommentActivity"
            android:screenOrientation="portrait"/>
        <!--图片介绍-->
        <activity
            android:name=".start.action.PictrueInfoActivity"
            android:screenOrientation="portrait"/>
        <!-- 填写订单 -->
        <activity
            android:name=".store.order.WriteOrderActivity"
            android:screenOrientation="portrait"/>
        <!--发票信息-->
        <activity
            android:name=".store.invoice.InvoiceInfoActivity"
            android:screenOrientation="portrait"/>
        <!--发票信息-->
        <activity
            android:name=".store.cashier.CashierActivity"
            android:screenOrientation="portrait"/>
        <!--管理-->
        <activity
            android:name=".explore.manage.ManageActivity"
            android:screenOrientation="portrait"/>
        <!--管理设置-->
        <activity
            android:name=".explore.manage.ManagerSettingsActivity"
            android:screenOrientation="portrait"/>
        <!-- ===============================业务activity定义在这条线之上================================== -->
        <!-- 二维码 -->
        <activity
            android:name=".qrcode.CaptureActivity"
            android:screenOrientation="portrait"/>
        <!-- shareSDK -->
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter tools:ignore="GoogleAppIndexingDeepLinkError,GoogleAppIndexingWarning">

                <!-- <data android:scheme="tencent" /> -->

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <!-- 微信分享回调 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <!-- 地区选择 -->
        <service android:name=".me.address.CityService"/>
        <!--表情解析-->
        <service android:name=".util.EmojiService"/>

        <activity android:name=".TestActivity"/>
        <activity
            android:name=".JointImageTestActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>
