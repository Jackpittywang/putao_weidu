<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="WeiduText" parent="TextAppearance.AppCompat.Medium" />
    <!--编辑字体样式-->
    <style name="WeiduText.EditText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/edit_text_background</item>
    </style>
    <!--标题栏延时-->
    <style name="style_navigation_bar">
        <item name="android:id">@id/navigation_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_bar_height</item>
        <item name="nav_has_divider">false</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--地址管理title-->
    <style name="style_address_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/layout_background</item>
    </style>
    <!--地址管理title文字-->
    <style name="style_address_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!--地址管理title文字(必填)-->
    <style name="style_address_title_text_must">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/text_color_red</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
    <!--地址管理编辑文字-->
    <style name="style_address_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/color_C2C2C2</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawableRight">@drawable/btn_clear</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <!--设置行-->
    <style name="style_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!--分享行-->
    <style name="style_share_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">20dp</item>
    </style>
    <!--分享按钮-->
    <style name="style_share_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--分享图标-->
    <style name="style_share_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--分享文字-->
    <style name="style_share_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <!--tabBar-->
    <style name="style_tab_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--登录框-->
    <style name="style_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="style_login_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/text_select</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--图片加载主样式-->
    <style name="image_style">
        <!--加载图片比例类型-->
        <item name="actualImageScaleType">focusCrop</item>
        <!--占位图-->
        <item name="placeholderImage">@drawable/img_image_default_l</item>
        <!--占位图比例类型-->
        <item name="placeholderImageScaleType">fitCenter</item>
        <!--加载失败图-->
        <item name="failureImage">@drawable/img_image_default_l</item>
        <!--加载失败图比例类型-->
        <item name="failureImageScaleType">centerInside</item>
        <!--加载重试图比例类型-->
        <item name="retryImageScaleType">centerCrop</item>
        <!--加载时缓冲图比例类型-->
        <item name="progressBarImageScaleType">centerInside</item>
        <!--占位图比例类型-->
        <item name="progressBarAutoRotateInterval">1000</item>
    </style>
    <!--4dp的圆角图片加载样式-->
    <style name="image_round_4dp" parent="image_style">
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">4dp</item>
    </style>
    <!--圆形图片加载样式-->
    <style name="image_circle" parent="image_style">
        <item name="roundAsCircle">true</item>
    </style>
    <!-- 水平线 -->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>
    <!-- 竖直线 -->
    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>
    <!-- 申请售后理由 -->
    <style name="service_spinner_style">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
</resources>
