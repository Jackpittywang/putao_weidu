<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--产品区-->
            <RelativeLayout
                android:id="@+id/rl_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!--产品图标-->
                <com.sunnybear.library.view.image.ImageDraweeView
                    android:id="@+id/iv_product_icon"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="#CCCCCC" />

                <!--产品介绍-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/iv_product_icon"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/close_selector" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_close"
                        android:layout_marginTop="4dp"
                        android:orientation="vertical">

                        <!--产品标题-->
                        <TextView
                            android:id="@+id/tv_product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="葡萄探索号"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_20sp" />

                        <!--产品介绍-->
                        <TextView
                            android:id="@+id/tv_product_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="快乐不至于屏幕虚拟+现实儿童科技益智玩具(本产品需搭配iPad使用)"
                            android:textColor="@color/text_color_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:background="@color/divider_color" />

            <!--选择规格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:orientation="vertical">

                <!--选择颜色-->
                <LinearLayout
                    android:id="@+id/ll_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择颜色"
                        android:textColor="@color/text_color_646464"
                        android:textSize="@dimen/text_size_18sp" />

                    <com.sunnybear.library.view.select.TagBar
                        android:id="@+id/tl_color_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        auto:horizontalSpacing="8dp"
                        auto:orientation="horizontal"
                        auto:tag_background_nor="@drawable/btn_norms_nor"
                        auto:tag_background_sel="@drawable/btn_norms_sel"
                        auto:tag_text_color_dis="@color/color_C2C2C2"
                        auto:tag_text_color_nor="@color/text_color_646464"
                        auto:tag_text_color_sel="@color/text_color_F5F5F5"
                        auto:verticalSpacing="8dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!--加入购物车-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/background_F5F5F5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="￥"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_20sp" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="399.00"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_join_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/text_main_color_sel"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>