    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.sunnybear.library.view.image.ImageDraweeView
            android:id="@+id/iv_discovery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/img_image_default_l"
            android:scaleType="centerInside"
            auto:placeholderImageScaleType="centerCrop" />

        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#66000000" />-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_player"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_40_play_selector"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:text="淘淘向右走"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:text="这个是视频介绍"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
