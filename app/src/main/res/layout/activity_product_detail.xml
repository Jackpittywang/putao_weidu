<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="商品详情"
        auto:nav_right_icon="@drawable/shipping_car_selector" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--内容区-->
        <com.sunnybear.library.view.sticky.StickyHeaderLayout
            android:id="@+id/sticky_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--头部-->
            <LinearLayout
                android:id="@id/stickyHeaderLayout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--广告位-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="广告banner" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <!--产品介绍-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/ll_intro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!--产品标题-->
                        <TextView
                            android:id="@+id/tv_product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="葡萄探索号"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_20sp" />

                        <!--产品介绍-->
                        <TextView
                            android:id="@+id/tv_product_intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="快乐不至于屏幕虚拟+现实儿童科技益智玩具(本产品需搭配iPad使用)"
                            android:textColor="@color/text_color_gray" />
                    </LinearLayout>

                    <!--间隔线-->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="1px"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="8dp"
                        android:background="@color/divider_color" />

                    <!--分享-->
                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/share_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="分享"
                            android:textColor="@color/text_main_color_nor"
                            android:textSize="@dimen/text_size_16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color" />

            <!--标题栏-->
            <com.sunnybear.library.view.tab.TitleBar
                android:id="@id/stickyHeaderLayout_sticky"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="8dp">

                <!--概述-->
                <com.sunnybear.library.view.tab.TitleItem
                    android:id="@+id/ll_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    auto:active_color="@color/text_main_color_nor"
                    auto:inactive_color="@color/text_color_gray"
                    auto:indicator_color="@color/text_main_color_nor"
                    auto:is_active="true"
                    auto:title_text="概述" />

                <!--规格参数-->
                <com.sunnybear.library.view.tab.TitleItem
                    android:id="@+id/ll_ing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    auto:active_color="@color/text_main_color_nor"
                    auto:inactive_color="@color/text_color_gray"
                    auto:indicator_color="@color/text_main_color_nor"
                    auto:title_text="规格参数" />

                <!--包装清单-->
                <com.sunnybear.library.view.tab.TitleItem
                    android:id="@+id/ll_finish"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    auto:active_color="@color/text_main_color_nor"
                    auto:inactive_color="@color/text_color_gray"
                    auto:indicator_color="@color/text_main_color_nor"
                    auto:title_text="包装清单" />

                <!--售后-->
                <com.sunnybear.library.view.tab.TitleItem
                    android:id="@+id/ll_news"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    auto:active_color="@color/text_main_color_nor"
                    auto:inactive_color="@color/text_color_gray"
                    auto:indicator_color="@color/text_main_color_nor"
                    auto:title_text="售后" />
            </com.sunnybear.library.view.tab.TitleBar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color" />

            <!--H5页面-->
            <com.sunnybear.library.view.BasicWebView
                android:id="@id/stickyHeaderLayout_scrollable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp" />
        </com.sunnybear.library.view.sticky.StickyHeaderLayout>

        <!--价格栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="399.00"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_join_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@color/text_main_color_sel"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_20sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>