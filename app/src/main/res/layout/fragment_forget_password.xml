<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="#fff"
        auto:nav_left_icon="@drawable/btn_20_back_p_sel"
        auto:nav_main_title="忘记密码"
        auto:nav_main_title_color="@color/text_color" />
    <!--间隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#c2c2c2" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sunnybear.library.view.CleanableEditText
            android:id="@+id/et_mobile"
            style="@style/WeiduText.EditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:hint="@string/mobile"
            android:inputType="phone"
            auto:maxLength="11" />
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/divider_color" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sunnybear.library.view.CleanableEditText
                android:id="@+id/et_validate"
                style="@style/WeiduText.EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#fff"
                android:hint="验证码"
                android:inputType="phone"
                auto:maxLength="11" />
            <TextView
                android:background="#fff"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:text="获取验证码"
                android:layout_width="80dp"
                android:layout_height="44dp" />
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/divider_color" />
        <Button
            android:id="@+id/btn_nextstep"
            android:text="下一步"
            android:textColor="#fff"
            android:background="#c2c2c2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
    </LinearLayout>
</LinearLayout>
