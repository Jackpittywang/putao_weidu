<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="@string/setting" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_EBEBEB" />


    <com.sunnybear.library.view.SettingItem
        android:id="@+id/si_modify_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        auto:setting_divider_color="@color/divider_color"
        auto:setting_text="@string/modifypassword" />

    <com.sunnybear.library.view.SettingItem
        android:id="@+id/si_about_us"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        auto:setting_divider_color="@color/divider_color"
        auto:setting_text="@string/aboutus" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_EBEBEB" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:gravity="center"
        android:text="@string/exitaccout"
        android:textColor="#ed5564"
        android:textSize="16sp" />
</LinearLayout>