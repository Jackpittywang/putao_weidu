<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:background="#705e5a"
                android:orientation="vertical">

    <com.sunnybear.library.view.image.ImageDraweeView
        android:id="@+id/iv_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55705e5a"/>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_modified_time_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/white"
            android:textSize="36sp"/>

        <TextView
            android:id="@+id/tv_modified"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="今天"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_modified_time_mon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_modified_time_day"
            android:gravity="center"
            android:text="JAY"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"/>

        <TextView
            android:id="@+id/tv_thinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/text_radius_background"
            android:drawableLeft="@drawable/icon_20_30"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="创想"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone"/>


        <!--        <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_thinking"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn_scan_selector" />-->

    </RelativeLayout>

    <!-- <com.sunnybear.library.view.viewpager.BounceBackViewPager
         android:id="@+id/vp_content"
         android:layout_width="950px"
         android:layout_height="match_parent"
         android:layout_marginBottom="15dp"
         android:layout_marginTop="15dp"
         auto:overscroll_translation="500px"/>-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:clipChildren="false"/>

</RelativeLayout>