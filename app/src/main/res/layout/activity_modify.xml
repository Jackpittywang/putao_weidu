<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="修改登录密码"
        auto:nav_main_title_color="@color/white"
        auto:nav_main_title_size="@dimen/text_size_8sp"/>

    <View style="@style/line_horizontal"/>

    <EditText
        android:id="@+id/et_pw_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginRight="@dimen/distance_8dp"
        android:background="@null"
        android:hint="旧密码"
        android:minHeight="45dp"/>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginRight="@dimen/distance_8dp"/>

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginRight="@dimen/distance_8dp"
        android:background="@null"
        android:hint="新密码(6-18位)"
        android:minHeight="45dp"/>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginRight="@dimen/distance_8dp"/>


    <EditText
        android:id="@+id/et_pw_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_8dp"
        android:layout_marginRight="@dimen/distance_8dp"
        android:background="@null"
        android:hint="重复新密码"
        android:minHeight="45dp"/>

    <View style="@style/line_horizontal"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:gravity="center"
        android:text="确任修改"
        android:textColor="#ed5564"
        android:textSize="16sp"/>

</LinearLayout>