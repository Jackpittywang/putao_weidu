<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_EBEBEB"
              android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="修改登录密码"
        auto:nav_main_title_color="@color/white"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/color_C2C2C2"/>

    <com.sunnybear.library.view.CleanableEditText
        android:id="@+id/et_pw_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableRight="@drawable/close_selector"
        android:hint="旧密码(6-18位)"
        android:inputType="textPassword"
        android:maxLength="18"
        android:minHeight="45dp"
        android:paddingLeft="@dimen/distance_8dp"
        android:paddingRight="@dimen/distance_8dp"
        android:textColorHint="@color/color_C2C2C2"/>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/distance_8dp"/>

    <com.sunnybear.library.view.CleanableEditText
        android:id="@+id/et_pw_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableRight="@drawable/close_selector"
        android:hint="新密码(6-18位)"
        android:inputType="textPassword"
        android:maxLength="18"
        android:minHeight="45dp"
        android:paddingLeft="@dimen/distance_8dp"
        android:paddingRight="@dimen/distance_8dp"
        android:textColorHint="@color/color_C2C2C2"/>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/distance_8dp"/>


    <com.sunnybear.library.view.CleanableEditText
        android:id="@+id/et_pw_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableRight="@drawable/close_selector"
        android:hint="重复新密码(6-18位)"
        android:inputType="textPassword"
        android:maxLength="18"
        android:minHeight="45dp"
        android:paddingLeft="@dimen/distance_8dp"
        android:paddingRight="@dimen/distance_8dp"
        android:textColorHint="@color/color_C2C2C2"/>

    <View style="@style/line_horizontal"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="20dp"
        android:background="@drawable/text_userinfo_limit_shape"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>