<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="@color/white"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="售后详情" />

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/navigation_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebebeb"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_service_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tv_service_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service_no_text"
                    android:text="-------------------"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_service_purchase_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_service_no"
                    android:text="---- : -- --"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_14sp" />

                <RelativeLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_service_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="------"
                        android:textColor="#ed5564"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/tv_service_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_service_status"
                        android:gravity="right"
                        android:text="¥ -----"
                        android:textColor="#ed5564"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_service_cost_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_service_status"
                        android:layout_toLeftOf="@+id/tv_service_cost"
                        android:gravity="right"
                        android:text="订单金额: "
                        android:textColor="#313131"
                        android:textSize="@dimen/text_size_14sp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_service_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_info_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_20_16" />

                <TextView
                    android:id="@+id/tv_service_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_info_icon"
                    android:text="---"
                    android:textColor="@color/text_color_646464"
                    android:textSize="@dimen/text_size_14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="订单信息"
                android:textColor="#646464"
                android:textSize="@dimen/text_size_16sp" />

            <LinearLayout
                android:id="@+id/ll_service_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="收货人姓名"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收货人地址"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_customer_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="13800000000"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#e1e1e1" />

                <TextView
                    android:id="@+id/tv_pay_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付方式："
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_shipment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配送方式："
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#e1e1e1" />

                <TextView
                    android:id="@+id/tv_receipt_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发票类型："
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_receipt_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发票抬头："
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tv_receipt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发票内容："
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="商品信息"
                    android:textColor="#646464"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:id="@+id/ll_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical"
                        android:text="没有商品"
                        android:textColor="#959595" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_fee_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_goods_total_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/tv_cost_text"
                        android:text="--"
                        android:textColor="#ed5564"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_cost_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_cost"
                        android:gravity="end"
                        android:text="件商品 合计："
                        android:textColor="#313131"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:text="¥ ------"
                        android:textColor="#313131"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/tv_shipment_fee_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cost"
                        android:layout_toLeftOf="@+id/tv_shipment_fee"
                        android:gravity="right"
                        android:text="含运费："
                        android:textColor="#313131" />

                    <TextView
                        android:id="@+id/tv_shipment_fee"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_cost"
                        android:gravity="right"
                        android:text="¥ ---"
                        android:textColor="#313131" />

                    <TextView
                        android:id="@+id/tv_total_cost_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_shipment_fee"
                        android:layout_toLeftOf="@+id/tv_total_cost"
                        android:gravity="end"
                        android:text="合计："
                        android:textColor="#313131" />

                    <TextView
                        android:id="@+id/tv_total_cost"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_shipment_fee"
                        android:gravity="end"
                        android:text="¥ ------"
                        android:textColor="#ed5564" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_service_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_service_operation"
            android:text="取消订单" />

        <Button
            android:id="@+id/btn_service_operation"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="立即支付" />

    </RelativeLayout>
</RelativeLayout>