<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="#fff"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_right_title="@string/save"
        auto:nav_main_title="个人简介"/>
    <!--间隔线-->
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sunnybear.library.view.CleanableEditText
            android:id="@+id/et_resume"
            style="@style/WeiduText.EditText"
            android:padding="10dp"
            android:textColor="#313131"
            android:lineSpacingExtra="@dimen/text_size_10sp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff"
            android:maxLength="40"
            android:gravity="top"
            android:hint="这个人很懒，还没有留下签名"
            android:maxLines="6"
            android:inputType="phone"/>
        <!--<EditText-->
            <!--android:id="@+id/et_nickname"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:background="#fff"-->
            <!--android:maxLines="6"-->
            <!--android:textColorHint="#313131"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="150dp" />-->
        <TextView
            android:id="@+id/tv_rest_part"
            android:text="0"
            android:textSize="@dimen/text_size_16sp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/text_color_gray"
            android:layout_width="36dp"
            android:layout_height="22dp" />
    </LinearLayout>
</LinearLayout>