<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <!--消息通知图标-->
    <com.sunnybear.library.view.image.ImageDraweeView
        android:id="@+id/iv_notify_icon"
        style="@style/image_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        auto:placeholderImage="@drawable/img_head_signup" />

    <!--消息通知介绍-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <!--消息通知标题-->
        <TextView
            android:id="@+id/tv_notify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="葡萄籽"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <!--消息通知日期-->
        <TextView
            android:id="@+id/tv_notify_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="false"
            android:text="刚刚而已"
            android:textSize="@dimen/text_size_14sp" />

        <!--通知消息内容-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notify_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="快乐不至于屏幕虚拟+现实儿童科技益智玩具(本产品需搭配iPad使用)"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>