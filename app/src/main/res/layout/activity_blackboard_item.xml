<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View

            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:maxLines="1"
            android:text="##:##"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/divider_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_blackboard"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <!--标题图-->
            <com.sunnybear.library.view.image.ImageDraweeView
                android:id="@+id/iv_sign"
                style="@style/image_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_EBEBEB"
                android:src="@drawable/img_head_default"
                auto:aspect_ratio="2"
                auto:default_drawable="@drawable/img_head_default" />
            <!--活动状态-->
            <TextView
                android:id="@+id/tv_action_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/action_ing_background"
                android:padding="4dp"
                android:text="进行中"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <!--标题-->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="陪孩子一起学数学"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/text_size_18sp" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/marketing_sign_shape"
                android:padding="5dp"
                android:text="话题征集"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <!--摘要-->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/iv_icon"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="可以陪孩子一起学数学让孩子对数字敏感,adsfffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff培养孩子逻辑思维能力"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />


        <LinearLayout
            android:id="@+id/ll_blackboard_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_time_quantum"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:text="活动时间：2016年3月12日至4月2日"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/text_size_16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_participate"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="已有****用户参与活动"
            android:textColor="@color/text_color_red"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>
</LinearLayout>
