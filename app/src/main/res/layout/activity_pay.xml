<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--支付栏-->
    <LinearLayout
        android:id="@+id/ll_pay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/textview_circle_coner"
            android:gravity="center"
            android:text="马上支付"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_pay"
        android:orientation="vertical">

        <!--标题栏-->
        <com.sunnybear.library.view.NavigationBar
            style="@style/style_navigation_bar"
            android:visibility="visible"
            auto:nav_has_divider="true"
            auto:nav_left_title="取消"
            auto:nav_left_title_color="@drawable/text_select"
            auto:nav_main_title="收银台" />

        <!--图片-->
        <ImageView
            android:id="@+id/idv_cashier_headicon"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_pay_cover" />

        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_EBEBEB" />

        <!--订单信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_12sp" />

                <!--订单号-->
                <TextView
                    android:id="@+id/tv_order_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1150710770031935"
                    android:textColor="#313131"
                    android:textSize="@dimen/text_size_14sp" />

                <!--订单时间-->
                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2015-08-02 13:48:37"
                    android:textColor="#959595"
                    android:textSize="@dimen/text_size_12sp" />
            </LinearLayout>

            <!--订单金额-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="待支付"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额:"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/text_color_red" />

                    <TextView
                        android:id="@+id/tv_cash_pay_summoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="864.00"
                        android:textColor="@color/text_color_red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_20_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:text="请在24小时内完成支付，否则订单会自动取消。完成支付后，我们将尽快为您发货。" />
        </LinearLayout>

        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_EBEBEB"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="支付方式"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.sunnybear.library.view.SwitchButton
                android:id="@+id/btn_pay_zfb"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                auto:isSelect="true"
                auto:norDrawable="@drawable/check_box_nor"
                auto:selDrawable="@drawable/check_box_sel" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_30_02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="支付宝支付"
                android:textColor="@color/color_313131"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EBEBEB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="10dp">

            <com.sunnybear.library.view.SwitchButton
                android:id="@+id/btn_pay_wexin"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                auto:isSelect="true"
                auto:norDrawable="@drawable/check_box_sel"
                auto:selDrawable="@drawable/check_box_nor" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_30_03" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:text="微信支付"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/color_313131" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_EBEBEB" />
    </LinearLayout>

</RelativeLayout>
