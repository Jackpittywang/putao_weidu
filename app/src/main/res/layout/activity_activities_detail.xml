<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        android:visibility="visible"
        auto:nav_left_icon="@drawable/btn_20_back_p_sel"
        auto:nav_main_title="活动详情"
        auto:nav_right_icon="@drawable/btn_20_share_p_nor"
        style="@style/style_navigation_bar"/>
    <!--间隔线-->
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />
    <!--内容区域-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--顶部图片区域-->
        <RelativeLayout
            android:id="@+id/layout_activitiesdetail_header"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <com.sunnybear.library.view.image.ImageDraweeView
                android:id="@+id/iv_activitiesdetail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_activitiesdetail_status"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="12sp"
                android:background="#985ec9"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="体验"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--活动标题-->
        <TextView
            android:id="@+id/tv_activitiesdetail_title"
            android:text="活动标题最多十五个汉字限制一行"
            android:textSize="@dimen/text_size_16sp"
            android:maxLength="15"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--活动简介-->
        <TextView
            android:id="@+id/tv_activitiesdetail_resume"
            android:text="活动简介字数限制四十字，这里完整显示全部简介的信息，这粒是俩行这里完整显示全部简介的信息，这粒是俩行，"
            android:textSize="@dimen/text_size_16sp"
            android:maxLines="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--报名相关信息-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.sunnybear.library.view.recycler.BasicRecyclerView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_activitiesdetail_num"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="人报名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb" />
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--地址-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_20_20"/>
            <TextView
                android:id="@+id/tv_personinfo_address"
                android:textColor="#313131"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16sp"
                android:text="上海.徐汇区.贝岭大厦"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_arrow"/>
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--日期-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_20_21"/>
            <TextView
                android:id="@+id/tv_personinfo_time"
                android:textColor="#313131"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16sp"
                android:text="2015/12/25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--剩余时间-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#fff"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_20_22"/>
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#959595"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_12sp"
                    android:text="报名剩余时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_personinfo_resttime"
                    android:textColor="#313131"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="9天15小时32分钟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb" />
    </LinearLayout>
</LinearLayout>
