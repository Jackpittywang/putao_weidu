<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="@color/white"
        auto:nav_left_title="@string/cancel"
        auto:nav_left_title_color="@drawable/text_select"
        auto:nav_main_title="我要参加"
        auto:nav_main_title_color="@color/text_color"
        auto:nav_right_title="提交"
        auto:nav_right_title_color="@drawable/text_select"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#ffE874"
        android:gravity="center"
        android:text="提交成功后，会有客服联系确认报名结果。"
        android:textColor="#ed5564"
        android:textSize="@dimen/text_size_14sp"/>
    <!--间隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>
    <!--间隔区-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ebebeb"/>
    <!--间隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--孩子年龄-->
        <LinearLayout
            android:id="@+id/ll_childname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="家长身份"
                    android:textColorHint="#646464"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/text_color_red"/>

                <TextView
                    android:id="@+id/tv_parent_relation"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>

                <ImageView
                    android:id="@+id/iv_parentrelation_selecticon"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_arrow_down"/>
            </LinearLayout>
            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>
        </LinearLayout>

        <!--手机号码-->
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_phone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="手机号码"
                    android:textColorHint="#646464"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/text_color_red"/>

                <com.sunnybear.library.view.CleanableEditText
                    android:id="@+id/et_phone"
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/close_selector"
                    android:maxLength="11"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>
            </LinearLayout>
            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>
        </LinearLayout>

        <!--孩子昵称-->
        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_phone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="孩子昵称"
                    android:textColorHint="#646464"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/text_color_red"/>

                <EditText
                    android:id="@+id/et_nickname"
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>
            </LinearLayout>
            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>
        </LinearLayout>

        <!--孩子年龄-->
        <LinearLayout
            android:id="@+id/ll_chldage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_phone"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    style="@style/WeiduText.EditText"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:hint="孩子年龄"
                    android:textColorHint="#646464"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/text_color_red"/>

                <TextView
                    android:id="@+id/tv_childage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>

                <ImageView
                    android:id="@+id/iv_child_age"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:src="@drawable/btn_arrow_down"/>
            </LinearLayout>

        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/divider_color"/>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb"/>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <!--活动场次-->
        <LinearLayout
            android:id="@+id/ll_activitytimes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="活动场次"
                    android:textColorHint="#646464"/>

                <EditText
                    android:id="@+id/et_activitytimes"
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>
            </LinearLayout>

            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>

        </LinearLayout>

        <!--QQ/微信-->
        <LinearLayout
            android:id="@+id/ll_QQorWX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:hint="QQ/微信"
                    android:textColorHint="#646464"/>

                <EditText
                    android:id="@+id/et_QQorWX"
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>
            </LinearLayout>
            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>
        </LinearLayout>
        <!--家长姓名-->
        <LinearLayout
            android:id="@+id/ll_parentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:hint="家长姓名"
                    android:textColorHint="#646464"/>

                <EditText
                    android:id="@+id/et_parentname"
                    style="@style/WeiduText.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:textColorHint="#646464"/>
            </LinearLayout>
            <!--间隔线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider_color"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="留言"
            android:lineSpacingExtra="10px"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="#313131"
            android:textColorHint="#c2c2c2"
            android:textSize="16sp"/>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#ebebeb"/>
    </LinearLayout>
</LinearLayout>