<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ebebeb"
              android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="@color/white"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="填写快递单号"
        auto:nav_right_title="保存"/>

    <LinearLayout
        android:id="@+id/ll_select_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="选择快递公司"
            android:textColor="@color/color_313131"
            android:textColorHint="@color/color_C2C2C2"
            android:textSize="@dimen/text_size_22sp"/>

        <ImageView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/btn_arrow_down"/>
    </LinearLayout>

    <View
        style="@style/line_horizontal"/>

    <EditText
        android:id="@+id/et_express_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="填写快递单号"
        android:padding="15dp"
        android:textColor="@color/color_313131"
        android:textColorHint="@color/color_C2C2C2"
        android:textSize="@dimen/text_size_22sp"/>

</LinearLayout>