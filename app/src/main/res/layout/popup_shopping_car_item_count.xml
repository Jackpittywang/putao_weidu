<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_count"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="选择数量"
        android:textColor="@color/text_color_646464"
        android:textSize="@dimen/text_size_18sp" />

    <com.sunnybear.library.view.AmountSelectLayout
        android:id="@+id/al_count"
        android:layout_width="114dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        auto:btn_background="@drawable/btn_count_sel"
        auto:dis_color="@color/color_C2C2C2"
        auto:edit_background="@drawable/btn_count_sel"
        auto:nor_color="@color/text_color_646464" />

</RelativeLayout>