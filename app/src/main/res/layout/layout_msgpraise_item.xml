<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/transparent">

    <!--消息通知图标-->
    <com.sunnybear.library.view.image.ImageDraweeView
        android:id="@+id/iv_praise_headericon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:placeholderImage="@drawable/tab_bar_me_sel"/>

    <!--消息通知介绍-->
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--消息通知标题-->
        <TextView
            android:id="@+id/tv_praise_usernickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示用户昵称"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_14sp" />

        <!--消息通知日期-->
        <TextView
            android:id="@+id/tv_praise_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_14sp"
            android:singleLine="false"
            android:text="刚刚而已"/>

        <!--通知消息内容-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞了您"
                android:textColor="#313131"
                android:maxLength="200"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
        <LinearLayout
            android:background="#f5f5f5"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:id="@+id/tv_praised_username"-->
                <!--android:text="回复 您"-->
                <!--android:textColor="#959595"-->
                <!--android:textSize="@dimen/text_size_16sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <!--<TextView-->
                <!--android:text="："-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
            <TextView
                android:id="@+id/tv_praised_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="200"
                android:lineSpacingExtra="5dp"
                android:text="快乐不至于屏幕虚拟+现实儿童科技益智玩具(本产品需搭配iPad使用)"
                android:textColor="#959595"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
    </LinearLayout>
    <!--间隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />
</LinearLayout>