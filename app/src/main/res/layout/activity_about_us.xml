<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        auto:nav_left_icon="@drawable/btn_20_back_p_sel"
        auto:nav_main_title="@string/aboutus"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/img_bg_signup"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/company"
            android:text="葡萄纬度"
            android:textSize="30sp"
            android:textColor="@color/main_color_nor"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1.0.0"
            android:layout_below="@+id/company"
            android:layout_alignRight="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/attributo"
            android:text="葡萄科技 版权所有"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="2015 Putao.com"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/attributo"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>