<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        android:visibility="visible"
        auto:nav_left_icon="@drawable/btn_20_back_p_sel"
        auto:nav_main_title="新闻详情"
        auto:nav_right_icon="@drawable/btn_20_share_p_nor"
        style="@style/style_navigation_bar"/>
    <!--间隔线-->
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />
    <!--内容区域-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--顶部图片区域-->
        <RelativeLayout
            android:id="@+id/layout_activitiesdetail_header"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <com.sunnybear.library.view.image.ImageDraweeView
                android:id="@+id/iv_activitiesdetail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_activitiesdetail_status"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="12sp"
                android:background="#985ec9"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="体验"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--活动标题-->
        <TextView
            android:id="@+id/tv_activitiesdetail_title"
            android:text="活动标题最多十五个汉字限制一行"
            android:textSize="@dimen/text_size_16sp"
            android:maxLength="15"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--活动简介-->
        <TextView
            android:id="@+id/tv_activitiesdetail_resume"
            android:text="活动简介字数限制四十字，这里完整显示全部简介的信息，这粒是俩行这里完整显示全部简介的信息，这粒是俩行，"
            android:textSize="@dimen/text_size_16sp"
            android:maxLines="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb" />
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <!--间隔区-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb" />
    </LinearLayout>
</LinearLayout>
