<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!--标题栏-->
    <com.sunnybear.library.view.NavigationBar
        style="@style/style_navigation_bar"
        android:background="#fff"
        auto:nav_left_icon="@drawable/back_selector"
        auto:nav_main_title="个人信息"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color" />
    <!--间隔线-->
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/text_size_14sp"
                android:text="头像"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.sunnybear.library.view.image.ImageDraweeView
                android:id="@+id/iv_personinfo_headicon"
                auto:roundAsCircle="true"
                auto:placeholderImage="@drawable/tab_bar_me_sel"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_arrow"/>
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/text_size_14sp"
                android:text="昵称"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_personinfo_nickname"
                android:textColor="#313131"
                android:textSize="@dimen/text_size_16sp"
                android:text="这里显示用户昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_arrow"/>
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
        <!--间隔线-->
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff"
            android:gravity="center">
            <TextView
                android:layout_weight="1"
                android:gravity="left"
                android:text="个人简介"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_personinfo_resume"
                android:text="这个用户很懒"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="#313131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_arrow"/>
        </LinearLayout>
        <!--间隔线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color" />
