<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/distance_10dp">

        <TextView
            android:id="@+id/tv_discovery_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/distance_5dp"
            android:maxLines="2"
            android:paddingBottom="@dimen/distance_10dp"
            android:paddingTop="@dimen/distance_10dp"
            android:text="这里显示的是这篇文章的标题"
            android:textColor="@color/color_313131"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_tag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_show_top"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                android:text="置顶"
                android:textColor="@color/text_color_ED5564"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_tag1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                android:text="标签名1"
                android:textColor="@color/color_C2C2C2"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_tag2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                android:text="标签名2"
                android:textColor="@color/color_C2C2C2"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tv_tag3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="@dimen/distance_5dp"
                android:paddingRight="@dimen/distance_5dp"
                android:text="标签名3"
                android:textColor="@color/color_C2C2C2"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>
    </LinearLayout>

    <com.sunnybear.library.view.image.ImageDraweeView
        android:id="@+id/iv_discovery_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"

        android:scaleType="centerInside"
        auto:placeholderImageScaleType="centerCrop" />

</LinearLayout>

